#include <stdio.h>

float converterFahrenheitParaCelsius(float fahrenheit) {
    float celsius;
    celsius = (fahrenheit - 32.0) * (5.0 / 9.0);
    return celsius;
}

int main() {
    float temperaturaFahrenheit, temperaturaCelsius;
    
    printf("Digite a temperatura em Fahrenheit: ");
    scanf("%f", &temperaturaFahrenheit);
    
    temperaturaCelsius = converterFahrenheitParaCelsius(temperaturaFahrenheit);
    
    printf("Temperatura em Celsius: %.2f\n", temperaturaCelsius);
    
    return 0;
}
